@model Wilderness.Game.Web.Models.PlayViewModel
@{
    ViewBag.Title = "Play";
}

<h2>Play</h2>

<div id="gameDisplay"></div>

<div class="container">
  <ul id="discussion"></ul>
</div>

@section scripts {
  <!--Script references. -->
  <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
  <!--Reference the SignalR library. -->
  <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>

  <!--Reference the autogenerated SignalR hub script. -->
  <script src="@Model.SignalRHubUrl"></script>

  <script src="~/Scripts/pixi.min.js"></script>

  <script src="~/Scripts/spriteManager.js"></script>
  <script src="~/Scripts/messageHandlers.js"></script>
  <script src="~/Scripts/game.js"></script>

  <script>
    function runGame() {
      Wilderness.Game.runGameLoop();
    }

    Wilderness.Game.initialize(
      {
        rootUrl: "/wilderness/",
        signalRUrl: "@Model.SignalRUrl",
        viewElement: '#gameDisplay',
        onReady: runGame
      });
  </script>

}

